{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Topic",
  "type": "object",
  "required": [
    "id",
    "name",
    "domain",
    "claim_space_id",
    "status"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string"
    },
    "domain": {
      "type": "string",
      "enum": [
        "health",
        "climate",
        "other"
      ]
    },
    "description": {
      "type": "string"
    },
    "claim_space_id": {
      "type": "string",
      "format": "uuid"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "active",
        "deprecated"
      ]
    },
    "impact_weight": {
      "type": "number",
      "minimum": 0
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
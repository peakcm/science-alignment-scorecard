{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StanceEstimateLikert",
  "type": "object",
  "required": [
    "id",
    "candidate_id",
    "topic_id",
    "window_start",
    "window_end",
    "kde_bandwidth",
    "summary",
    "grid",
    "density",
    "n_units",
    "method_version"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "candidate_id": {
      "type": "string",
      "format": "uuid"
    },
    "topic_id": {
      "type": "string",
      "format": "uuid"
    },
    "window_start": {
      "type": "string",
      "format": "date"
    },
    "window_end": {
      "type": "string",
      "format": "date"
    },
    "kde_bandwidth": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "summary": {
      "type": "object",
      "properties": {
        "mean": {
          "type": "number"
        },
        "sd": {
          "type": "number"
        },
        "median": {
          "type": "number"
        },
        "p10": {
          "type": "number"
        },
        "p90": {
          "type": "number"
        }
      }
    },
    "grid": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "density": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "n_units": {
      "type": "integer",
      "minimum": 0
    },
    "data_sufficiency": {
      "type": "string",
      "enum": [
        "insufficient",
        "low",
        "adequate",
        "strong"
      ]
    },
    "method_version": {
      "type": "string"
    },
    "inputs_hash": {
      "type": "string"
    }
  }
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EvidenceUnit",
  "type": "object",
  "required": [
    "id",
    "candidate_id",
    "topic_id",
    "date",
    "source_type",
    "source_url",
    "extracted_text"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "candidate_id": {
      "type": "string",
      "format": "uuid"
    },
    "topic_id": {
      "type": "string",
      "format": "uuid"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "source_type": {
      "type": "string"
    },
    "jurisdiction": {
      "type": "string"
    },
    "audience_type": {
      "type": "string"
    },
    "venue": {
      "type": "string"
    },
    "source_url": {
      "type": "string",
      "format": "uri"
    },
    "archive_url": {
      "type": "string",
      "format": "uri"
    },
    "extracted_text": {
      "type": "string"
    },
    "quote_verified": {
      "type": "boolean"
    },
    "fact_checks": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "stance_state_id": {
      "type": "string"
    },
    "nlp_confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "weights": {
      "type": "object"
    },
    "effective_weight": {
      "type": "number",
      "minimum": 0
    },
    "processed_at": {
      "type": "string",
      "format": "date-time"
    },
    "method_version": {
      "type": "string"
    }
  }
}
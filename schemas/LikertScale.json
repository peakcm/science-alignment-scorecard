{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LikertScale",
  "type": "object",
  "required": [
    "id",
    "topic_id",
    "min",
    "max",
    "anchors"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "topic_id": {
      "type": "string",
      "format": "uuid"
    },
    "min": {
      "type": "number",
      "const": -2
    },
    "max": {
      "type": "number",
      "const": 2
    },
    "anchors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "value",
          "label"
        ],
        "properties": {
          "value": {
            "type": "number"
          },
          "label": {
            "type": "string"
          }
        }
      }
    },
    "notes": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
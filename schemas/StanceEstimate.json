{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StanceEstimate",
  "type": "object",
  "required": [
    "id",
    "candidate_id",
    "topic_id",
    "window_start",
    "window_end",
    "dirichlet_beta",
    "probabilities",
    "n_units",
    "method_version"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "candidate_id": {
      "type": "string",
      "format": "uuid"
    },
    "topic_id": {
      "type": "string",
      "format": "uuid"
    },
    "window_start": {
      "type": "string",
      "format": "date"
    },
    "window_end": {
      "type": "string",
      "format": "date"
    },
    "dirichlet_beta": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 0
      }
    },
    "probabilities": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      }
    },
    "effective_sample_size": {
      "type": "number",
      "minimum": 0
    },
    "n_units": {
      "type": "integer",
      "minimum": 0
    },
    "data_sufficiency": {
      "type": "string",
      "enum": [
        "insufficient",
        "low",
        "adequate",
        "strong"
      ]
    },
    "method_version": {
      "type": "string"
    },
    "inputs_hash": {
      "type": "string"
    }
  }
}
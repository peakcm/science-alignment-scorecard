{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConsensusPriorLikert",
  "type": "object",
  "required": [
    "id",
    "topic_id",
    "likert_scale_id",
    "as_of",
    "mixture",
    "method_version"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "topic_id": {
      "type": "string",
      "format": "uuid"
    },
    "likert_scale_id": {
      "type": "string",
      "format": "uuid"
    },
    "as_of": {
      "type": "string",
      "format": "date"
    },
    "mixture": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "weight",
          "mu",
          "sigma"
        ],
        "properties": {
          "weight": {
            "type": "number",
            "minimum": 0
          },
          "mu": {
            "type": "number",
            "minimum": -2,
            "maximum": 2
          },
          "sigma": {
            "type": "number",
            "exclusiveMinimum": 0
          }
        }
      }
    },
    "consensus_clarity": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "evidence_summary": {
      "type": "string"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "method_version": {
      "type": "string"
    },
    "inputs_hash": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
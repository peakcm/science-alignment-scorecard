{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ScoreSnapshot",
  "type": "object",
  "required": [
    "id",
    "candidate_id",
    "topic_id",
    "as_of",
    "alignment_score",
    "ci_low",
    "ci_high",
    "overlap_metric",
    "waffling_score",
    "waffling_window_days",
    "method_version"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "candidate_id": {
      "type": "string",
      "format": "uuid"
    },
    "topic_id": {
      "type": "string",
      "format": "uuid"
    },
    "as_of": {
      "type": "string",
      "format": "date"
    },
    "alignment_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "100\u00d7\u222bmin(prior, stance) dx on common grid"
    },
    "ci_low": {
      "type": "number"
    },
    "ci_high": {
      "type": "number"
    },
    "overlap_metric": {
      "type": "string",
      "enum": [
        "overlap",
        "1_minus_TVD"
      ]
    },
    "distance_metrics": {
      "type": "object",
      "properties": {
        "js_divergence": {
          "type": "number"
        },
        "hellinger": {
          "type": "number"
        },
        "wasserstein_1": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "consensus_clarity": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "data_sufficiency_flag": {
      "type": "boolean",
      "default": false
    },
    "waffling_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Temporal volatility + contradiction penalty"
    },
    "waffling_window_days": {
      "type": "integer",
      "minimum": 1
    },
    "notes": {
      "type": "string"
    },
    "method_version": {
      "type": "string"
    },
    "inputs_hash": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
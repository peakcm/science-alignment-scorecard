{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConsensusPrior",
  "type": "object",
  "required": [
    "id",
    "topic_id",
    "claim_space_id",
    "as_of",
    "dirichlet_alpha",
    "method_version"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "topic_id": {
      "type": "string",
      "format": "uuid"
    },
    "claim_space_id": {
      "type": "string",
      "format": "uuid"
    },
    "as_of": {
      "type": "string",
      "format": "date"
    },
    "dirichlet_alpha": {
      "type": "array",
      "items": {
        "type": "number",
        "exclusiveMinimum": 0
      }
    },
    "consensus_clarity": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "evidence_summary": {
      "type": "string"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "method_version": {
      "type": "string"
    },
    "inputs_hash": {
      "type": "string"
    }
  }
}